<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <include layout="@layout/horizontal_bar" />

    <TextView
        android:id="@+id/contact_info_name"
        style="@style/ContactInfoItem"
        android:drawableStart="@drawable/ic_person_color" />

    <TextView
        android:id="@+id/contact_info_phone"
        style="@style/ContactInfoItem"
        android:drawableStart="@drawable/ic_phone" />

    <TextView
        android:id="@+id/contact_info_email"
        style="@style/ContactInfoItem"
        android:drawableStart="@drawable/ic_mail" />

</LinearLayout>