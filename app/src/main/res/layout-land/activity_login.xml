<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseTheme">

    <RelativeLayout style="@style/BaseTheme30"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/paw_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/paw_large" />

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/app_name"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/username_edit_text"
            style="@style/LoginEditText"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/logo"
            android:hint="@string/username_edit_text"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/password_edit_text"
            style="@style/LoginEditText"
            android:layout_below="@id/username_edit_text"
            android:layout_toEndOf="@id/logo"
            android:hint="@string/password_edit_text"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            tools:targetApi="o" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/login_btn"
            style="@style/ButtonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_edit_text"
            android:layout_alignParentEnd="true"
            android:text="@string/login_text" />

        <Button
            android:id="@+id/register_btn"
            style="@style/BorderlessButton"
            android:layout_toEndOf="@id/logo"
            android:layout_below="@id/password_edit_text"
            android:layout_marginTop="20dp"
            android:text="@string/create_account" />

        <Button
            android:id="@+id/register_btn_google"
            style="@style/BorderlessButton"
            android:layout_below="@id/login_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:text="@string/login_google" />

        <Button
            android:id="@+id/register_btn_fb"
            style="@style/BorderlessButton"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/register_btn_google"
            android:text="@string/login_facebook"
            android:visibility="invisible" />

    </RelativeLayout>
</ScrollView>
